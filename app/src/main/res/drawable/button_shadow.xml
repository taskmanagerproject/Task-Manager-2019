<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="4dp" android:top="4dp">
                <shape>
                    <corners android:radius="@dimen/margin_16dp" />
                    <solid android:color="#2196f3" />
                </shape>
            </item>
            <item android:bottom="4dp" android:left="4dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#64b5f6" android:startColor="#42a5f5" />
                    <stroke android:width="4dp" android:color="#42a5f5" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="4dp" android:left="4dp"
                        android:right="4dp" android:top="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>